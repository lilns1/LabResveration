/* pages/setting/setting.wxss */

/* 整体容器 */
.settings-container {
    padding: 20rpx;
    background-color: #f8f8f8;
    min-height: 100vh;
  }
  
  /* 分区标题 */
  .section-title {
    font-size: 28rpx;
    color: #888;
    margin: 30rpx 20rpx 10rpx;
  }
  
  /* 设置组 */
  .settings-group {
    background-color: #fff;
    border-radius: 12rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
    overflow: hidden;
    padding: 10rpx 0;
  }
  
  /* 表单项 */
  .form-item {
    display: flex;
    align-items: center;
    padding: 24rpx;
    border-bottom: 1rpx solid #f0f0f0;
  }
  
  .form-item:last-child {
    border-bottom: none;
  }
  
  .form-label {
    width: 180rpx;
    font-size: 30rpx;
    color: #333;
  }
  
  .form-input {
    flex: 1;
    font-size: 30rpx;
    color: #333;
    padding: 10rpx 0;
  }
  
  .disabled {
    color: #999;
    background-color: #f8f8f8;
  }
  
  /* 提示文本 */
  .tip-text {
    font-size: 26rpx;
    color: #999;
    margin: 16rpx 20rpx;
  }
  
  /* 提交按钮 */
  .submit-btn {
    width: 90%;
    height: 88rpx;
    line-height: 88rpx;
    margin: 60rpx auto;
    background-color: #1aad19;
    color: #fff;
    font-size: 32rpx;
    border-radius: 44rpx;
    text-align: center;
    border: none;
  }
  
  /* 按钮点击效果 */
  .submit-btn:active {
    opacity: 0.8;
  }