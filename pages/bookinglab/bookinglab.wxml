<view class="container">
  <my-card wx:for="{{lib}}" wx:key="labId" title="{{item.labName}}" class="wide-card">
    <view slot="content" class="lab-info">
      <view class="lab-basic">
        <view class="lab-item">
          <text class="label">实验室编号:</text>
          <text class="value">{{item.labId}}</text>
        </view>
        <view class="lab-item">
          <text class="label">位置:</text>
          <text class="value">{{item.location || '未设置'}}</text>
        </view>
        <view class="lab-item">
          <text class="label">容量:</text>
          <text class="value">{{item.capacity || '--'}} 人</text>
        </view>
      </view>
      
      <view class="lab-description" wx:if="{{item.description}}">
        <text class="description-text">{{item.description}}</text>
      </view>
    </view>
    
    <!-- 将按钮移到actions插槽 -->
    <view slot="actions">
      <t-button 
        theme="primary" 
        size="small" 
        bind:tap="selectLab" 
        data-lab="{{item}}"
        class="select-btn">
        选择此实验室
      </t-button>
    </view>
  </my-card>
</view>