<view class="home-container">
  <!-- 顶部用户信息区 -->
  <view class="user-profile-section">
    <t-avatar 
      size="large" 
      t-class-content="avatar-content">
      {{userinfo.userName ? userinfo.userName[0] : 'U'}}
    </t-avatar>
    <view class="user-info">
      <text class="username">{{userinfo.userName}}</text>
      <text class="user-role">{{userinfo.userId}}</text>
    </view>
  </view>
  
  <!-- 底部工具栏 - 设置和关于按钮 -->
  <view class="bottom-toolbar">
    <t-button 
      icon="setting" 
      class="toolbar-btn"
      theme="light"
      bindtap="navigateToSetting">
      设置
    </t-button>
    
    <t-button 
      icon="help-circle" 
      class="toolbar-btn"
      bindtap="showAbout">
      关于
    </t-button>
  </view>
</view>