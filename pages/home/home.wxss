/* 整体容器 */
.settings-container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 分区标题 */
.section-title {
  font-size: 28rpx;
  color: #888;
  margin: 30rpx 20rpx 10rpx;
}

/* 设置组 */
.settings-group {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

/* 设置项 */
.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.settings-item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  align-items: center;
}

.item-text {
  font-size: 32rpx;
  margin-left: 20rpx;
  color: #333;
}

/* 用户信息项 */
.user-profile-item {
  display: flex;
  align-items: center;
  padding: 30rpx 24rpx;
}

.avatar-content {
  background-color: #0078d7; /* 改为蓝色背景 */
  color: #fff;
  font-weight: bold;
}

.user-info {
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 34rpx;
  font-weight: 500;
  margin-bottom: 6rpx;
  color: #333;
}

.user-role {
  font-size: 28rpx;
  color: #888;
}

/* 版本信息 */
.app-version {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}

/* 缓存大小 */
.cache-size {
  font-size: 28rpx;
  color: #999;
}
/* 添加退出登录按钮样式 */
.logout-btn {
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  margin: 40rpx auto;
  background-color: #ff4d4f;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  text-align: center;
  border: none;
}

/* 按钮点击效果 */
.logout-btn:active {
  opacity: 0.8;
}