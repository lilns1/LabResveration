.home-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f6f6f6;
  padding: 30rpx;
  box-sizing: border-box;
}
.user-avatar {
  width: 120rpx !important;
  height: 120rpx !important;
}

.avatar-content {
  font-size: 48rpx !important;
  font-weight: bold;
  color: #ffffff !important;
  background-color: #1aad19 !important; /* 绿色背景 */
}

/* 用户信息区域样式 */
.user-profile-section {
  display: flex;
  align-items: center;
  padding: 40rpx 20rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.user-avatar {
  width: 120rpx !important;
  height: 120rpx !important;
  border: 2rpx solid #e0e0e0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.avatar-content {
  font-size: 48rpx !important;
  font-weight: bold;
  color: #ffffff !important;
  background-color: #1aad19 !important;
}

.user-info {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
  flex: 1;
}

.username {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.user-role {
  font-size: 28rpx;
  color: #888888;
}

/* 操作卡片区域 */
.action-cards {
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
}

.card {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.card:active {
  background-color: #f9f9f9;
  transform: scale(0.98);
}

.card-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgba(26, 173, 25, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}

.my-reservations .card-icon {
  background-color: rgba(26, 173, 25, 0.1);
}

.favorite-labs .card-icon {
  background-color: rgba(255, 156, 25, 0.1);
}

.card-content {
  flex: 1;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 6rpx;
  display: block;
}

.card-desc {
  font-size: 26rpx;
  color: #999999;
  display: block;
}

.card-arrow {
  width: 40rpx;
  height: 40rpx;
}

/* 底部工具栏 */
.bottom-toolbar {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 30rpx 0;
  margin-top: 0rpx;
}

.toolbar-btn {
  width: 100% !important;
  margin: 15rpx 0 !important; /* 上下间距15rpx，左右不设置 */
  justify-content: flex-start !important; /* 按钮内容靠左对齐 */
  padding: 0 30rpx !important;
  background-color: rgb(0, 6, 87);
}