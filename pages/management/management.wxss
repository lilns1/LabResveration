/* pages/management/management.wxss */
page {
  padding-bottom: 120rpx;
  background-color: #f4f4f4;
}

.section-wrapper {
  margin-bottom: 24rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.page-header {
  padding: 30rpx 30rpx 20rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

/* 网格布局 */
.admin-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
  padding: 30rpx;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f8f8f8;
  border-radius: 16rpx;
  padding: 40rpx 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s, box-shadow 0.2s;
}

.grid-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.03);
}

.icon-wrapper {
  margin-bottom: 20rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.grid-text {
  font-size: 28rpx;
  color: #333;
}

/* 统计面板 */
.statistics {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #0052d9;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}