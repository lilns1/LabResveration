/* pages/noticemanagement/noticemanagement.wxss */

.container {
  height: 100%;
  width: 100%;
  background-color: #ffffff;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 页面标题 */
.page-header {
  margin-bottom: 30rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: inline-block;
  position: relative;
}

.header-title::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 0;
  width: 60rpx;
  height: 6rpx;
  background-color: #4285f4;
  border-radius: 3rpx;
}

/* 搜索框样式 */
.search-container {
  margin-bottom: 30rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: white;
  border-radius: 38rpx;
  padding: 15rpx 25rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
  position: relative;
  border: 1rpx solid #eaeaea;
}

.search-icon {
  margin-right: 15rpx;
}

.search-input {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #333;
}

.clear-icon {
  padding: 10rpx;
}

/* 添加公告按钮 */
.add-notice-container {
  margin-bottom: 30rpx;
  display: flex;
  justify-content: flex-end;
}

.add-notice-btn {
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 公告卡片样式 */
.notice-card {
  background-color: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  padding: 24rpx;
  margin-bottom: 24rpx;
}


.notice-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  padding: 8rpx 0;
  word-break: break-all;
}

.notice-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  min-width: 140rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
}

.delete-btn {
  --td-button-default-border-color: #ea4335;
  --td-button-default-color: #ea4335;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}

/* 弹窗样式 */
.popup-container {
  padding: 40rpx;
  background: white;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-icon {
  padding: 10rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.form-textarea {
  width: 100%;
  height: 240rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
}

.form-actions {
  margin-top: 40rpx;
}

.floating-add-btn {
  position: fixed;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 100rpx;
  height: 100rpx;
  background-color: #4285f4;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 10rpx rgba(66, 133, 244, 0.3);
  z-index: 100;
  transition: all 0.2s ease;
}

.floating-add-btn:active {
  transform: translateX(-50%) scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(66, 133, 244, 0.3);
}