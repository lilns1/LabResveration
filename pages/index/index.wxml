<tab-bar></tab-bar>
<swiper></swiper>
<notice></notice>
<my-card title="我的预约">
  <view slot="content">
    <block wx:if="{{currentIndex === -1}}">
      <view class="no-reservation">当前无预约</view>
    </block>
    <block wx:else>
      <view wx:if="{{reserArr[currentIndex]}}" class="reservation-info">
        <view class="info-item">实验室: {{reserArr[currentIndex].labId}}</view>
        <view class="info-item">日期: {{reserArr[currentIndex].reservationDate}}</view>
        <view class="info-item">时间: {{reserArr[currentIndex].startTime}} - {{reserArr[currentIndex].endTime}}</view>
        <view class="info-item">状态: {{reserArr[currentIndex].reservationStatus}}</view>
        <view class="info-item purpose">目的: {{reserArr[currentIndex].purpose || '无'}}</view>
      </view>
      <view wx:else class="loading">
        数据加载中...
      </view>
    </block>
  </view>
</my-card>

<view>
  <t-row gutter="16">
    <t-col span="500">
      <t-button theme="primary" size="large" bind:tap="handletap" data-tar="/pages/bookinglab/bookinglab">开始预约</t-button>
    </t-col>
    <t-col span="200">
      <t-button theme="primary" size="large" bind:tap="handletap" data-tar="/pages/choosetime/choosetime">我的预约</t-button>
    </t-col>
  </t-row>
</view>



