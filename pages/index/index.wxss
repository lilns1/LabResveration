/* filepath: d:\LabReservation\pages\index\index.wxss */
page {
  padding-bottom: 120rpx; /* 为底部 TabBar 预留空间，根据实际 TabBar 高度调整 */
  background-color: #f4f4f4; /* 可选：设置页面背景色 */
}

/* 为主要内容区域添加统一的下外边距 */
.section-wrapper {
  margin-bottom: 24rpx; /* 调整为你希望的间距大小 */
  background-color: #fff; /* 可选：为每个区域块设置白色背景 */
  border-radius: 16rpx; /* 可选：添加圆角 */
  overflow: hidden; /* 防止子元素溢出圆角 */
}

/* 移除最后一个 section-wrapper 的下外边距 */
.section-wrapper:last-child {
  margin-bottom: 0;
  background-color: transparent; /* 按钮容器不需要背景色 */
}

/* 预约信息卡片内的样式 (如果需要调整) */
.reservation-info {
  padding: 20rpx; /* 给卡片内容添加内边距 */
  font-size: 28rpx;
  color: #333;
}

.info-item {
  margin-bottom: 10rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.purpose {
  color: #666;
}

.no-reservation, .loading {
  padding: 40rpx 20rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 按钮容器样式 */
.button-container {
  display: flex; /* 使用 Flexbox 布局 */
  justify-content: space-around; /* 按钮均匀分布 */
  align-items: center;
  padding: 20rpx 24rpx; /* 给按钮容器添加内边距 */
  gap: 20rpx; /* 设置按钮之间的间距 */
  background-color: transparent; /* 确保按钮容器背景透明 */
}

/* 单个按钮包裹元素 */
.button-item {
  flex: 1; /* 让每个按钮占据可用空间的一半 */
}

/* 可以针对 t-button 进行微调，如果需要的话 */
/* 例如，确保按钮宽度适应其容器 */
.button-item t-button {
   width: 100%;
}

.notice-container {
  position: relative;
  width: 100%;
}

.notice-close {
  position: absolute;
  top: 50%;
  right: 20rpx;
  transform: translateY(-50%);
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.05);
  z-index: 10;
}

.notice-close:active {
  background-color: rgba(0, 0, 0, 0.1);
}