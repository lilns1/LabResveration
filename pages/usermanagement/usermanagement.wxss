/* pages/usermanagement/usermanagement.wxss */

.container {
  height: 100%;
  width: 100%;
  background-color: #ffffff;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 页面标题 */
.page-header {
  margin-bottom: 30rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: inline-block;
  position: relative;
}

.header-title::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 0;
  width: 60rpx;
  height: 6rpx;
  background-color: #4285f4;
  border-radius: 3rpx;
}

/* 搜索框样式 */
.search-container {
  margin-bottom: 30rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: white;
  border-radius: 38rpx;
  padding: 15rpx 25rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
  position: relative;
  border: 1rpx solid #eaeaea;
}

.search-icon {
  margin-right: 15rpx;
}

.search-input {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #333;
}

.clear-icon {
  padding: 10rpx;
}

/* 用户列表样式 */
.user-list {
  width: 100%;
}

.user-item {
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  line-height: 1.3 !important;
}

.user-avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #e0e0e0;
  overflow: hidden;
}

.role-admin-text {
  color: #4285f4;
}

.role-user-text {
  color: #34a853;
}

.user-role {
  display: flex;
  align-items: center;
  padding: 4rpx 0rpx;
  border-radius: 20rpx;
}

.btn-group {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  margin-top: 16rpx;
}

.action-btn {
  min-width: 140rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
}

.edit-btn {
  --td-button-default-border-color: #4285f4;
  --td-button-default-color: #4285f4;
}

.delete-btn {
  --td-button-default-border-color: #ea4335;
  --td-button-default-color: #ea4335;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}

.edit-popup {
  padding: 30rpx;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
  overflow-y: auto;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 30rpx;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.popup-footer {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-field {
  width: 100%;
}

.role-selector .t-button {
  min-width: 120rpx;
}

/* 角色文本样式 */
.role-admin-text {
  color: #4285f4;
  font-weight: 500;
}

.role-user-text {
  color: #34a853;
  font-weight: 500;
}

/* 用户角色外层样式 */
.user-role {
  margin-top: 10rpx;
}