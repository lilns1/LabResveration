/* components/my-card/my-card.wxss */
.card {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
  margin: 20rpx;
}

.card--hover {
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  transform: translateY(-4rpx);
}

/* 头部 */
.card__header {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.card__thumb {
  width: 64rpx;
  height: 64rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.card__title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 内容区 */
.card__content {
  padding: 24rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 操作按钮 */
.card__actions {
  padding: 16rpx 24rpx;
  border-top: 2rpx solid #f5f5f5;
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}